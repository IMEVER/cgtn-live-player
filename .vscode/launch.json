    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run cgtn",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cgtn-live-player",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "externalConsole": false,
            "preLaunchTask": "build debug",
            "linux": {
                "MIMode": "gdb"
            }
        },
        {
            "name": "Cgtn Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/build/cgtn-live-player",
            "processId":"${command:pickProcess}",
            "linux": {
                "MIMode": "gdb"
            }
        }
    ]
}